<div class="page">
	<div class="page_content">
		<div class="page_block">
			<header class="header row g-0">
				<div class="col-3">
				{{> logo}}
				</div>

			<nav class="header_nav col-9">
				<div class="header_nav_right">
				{{> nav list=header}}
				</div>
			</nav>
		</div>
     </header>
		
			<section class="page_block">
				<div class="hero">
					{{#with hero}}
				{{> hero title=title text=text}}
				<a class="button" href="{{button.url}}">{{button.text}}</a>
				<img src="{{photo}}" alt="hero image" class="hero_image">
				{{/with}}
				</div>
			</section>

		<main class="blog">
			{{#each blog}}
			{{> cardBlog data=this}}
			{{/each}}
		</main>

		{{#with form}}
		<div class="form">
			<div class="form_content">
			<h3 class="form_title">{{title}}</h3>
			<p class="form_info">{{info}}</p>
			</div>
			<div class="form_action">
				<a class="button form_button" href="{{href}}">{{button}}</a>
			</div>
		</div>
		{{/with}}

		
		<footer class="footer">
			<div>
				 {{> logo}}
			 <span class="footer_copyright">Copyright 2023-2024</span>
			</div>

			{{#each footer}}
			<div>
				<span class="footer_title">{{title}}</span>
				{{> nav list=links isVertical=true}}
			</div>
			{{/each}}

		</footer>
	</div>
</div>  
